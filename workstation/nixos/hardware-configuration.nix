    opengl = {
      enable = true;
      driSupport = true;
      driSupport32Bit = true;
      extraPackages = with pkgs; [
        vulkan-validation-layers
      ];
    };

    nvidia = {
      modesetting.enable = true;

      open = false;

      nvidiaSettings = false;
      powerManagement.enable = false;
    };
  };
